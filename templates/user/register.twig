{% extends "user/main.html" %}

{% block content %}
  <form id="loginform" class="form-vertical" method="post" action="{{ path_for('user.register') }}">
      {{ csrf.field | raw }}
      <div class="control-group normal_text">
        <h3><img src="/img/lotka-volterra-logo-text.svg" alt="Logo" class="logo" /></h3>
      </div>
      <div class="control-group">
        <div class="controls">
          <div class="main_input_box{{ errors.username ? ' has-error' : '' }}">
            <span class="add-on bg_lg">
                              <i class="icon-user"> </i></span>
            <input type="text" name="username" id="username" placeholder="User name">
            {% if errors.username %}
            <span class="help-block">{{ errors.username | first }}</span>
            {% endif %}
          </div>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <div class="main_input_box{{ errors.displayname ? ' has-error' : '' }}">
            <span class="add-on bg_lb">
                              <i class="icon-star"> </i></span>
            <input type="text" name="displayname" id="displayname" placeholder="Display name">
            {% if errors.displayname %}
            <span class="help-block">{{ errors.displayname | first }}</span>
            {% endif %}
          </div>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <div class="main_input_box{{ errors.email ? ' has-error' : '' }}">
            <span class="add-on bg_lr">
                              <i class="icon-envelope-alt"> </i></span>
            <input type="email" name="email" id="email" placeholder="E-mail">
            {% if errors.email %}
            <span class="help-block">{{ errors.email | first }}</span>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <div class="main_input_box{{ errors.password ? ' has-error' : '' }}">
            <span class="add-on bg_ly">
                              <i class="icon-lock"> </i></span>
            <input type="password" name="password" id="password" placeholder="Password">
            {% if errors.password %}
            <span class="help-block">{{ errors.password | first }}</span>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="form-actions">
        <span class="pull-left">
                      <a href="#" class="flip-link btn btn-info" id="to-recover" disabled="true">Lost password?</a>
                  </span>
        <span class="pull-right"><button type="submit" class="btn btn-default bg_lg">Register</button></span>
      </div>
    </form>
{% endblock %}